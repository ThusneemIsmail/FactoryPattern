class PlusMinus {
    public static void plusMinus(List<Integer> arr) {
    float negative = 0;
    float positive =0;
    float zero = 0;
    int n = arr.size();
    for(Integer element : arr){
        if (element == 0){
         zero = zero + 1;
        }
        else if (element > 0){
         positive = positive + 1;
         }
        else if(element< 0){
         negative = negative + 1;
        }
    }
    System.out.println(positive/n);
    System.out.println(negative/n);
    System.out.println(zero/n);

    }

}
